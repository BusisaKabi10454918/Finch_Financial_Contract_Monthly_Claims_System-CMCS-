@{
    ViewData["Title"] = "Lecturer Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Dashboard_Styles.css">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
</head>
<body>
    <main>
        <div class="corner-top-left">?</div>
        <form asp-action="Logout" asp-controller="General" method="post">
            <button class="corner-top-right">☰</button>
        </form>

        <div class="task-container">

            <div class="task">
                <a href="@Url.Action("CreateClaimView", "Lecturer")">
                    <img src="~/Images/Light/Buttons/Submit_Claim_Light_Buttons.png" alt="SubmitClaim"/>
                </a>
            </div>

            <div class="task">
                <a href="@Url.Action("ManageClaimView", "Lecturer")">
                    <img src="~/Images/Light/Buttons/Manage_Claims_Light_Buttons.png" alt="ManageClaims"/>
                </a>
            </div>

            <div class="task">
                <a href="@Url.Action("FeatureUnderDevelopment", "General")">
                    <img src="~/Images/Light/Buttons/Submit_Sup_Docs_Light_Buttons.png" alt="SubmitSupportingDocuments">
                </a>
            </div>

        </div>
    </main>
</body>
</html>