@{
    ViewData["Title"] = "Login | Welcome Back";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login_Style.css">
    <link rel="icon" href="~/Images/Light/Icons/favicon.ico" type="image/x-icon">
</head>

<body>
    <main>
        <h1 class="Page-Head">Welcome Back To The System</h1>


        <div class="Login-Container">
            <form class="Login-Form" method="post" asp-controller="General" asp-action="Login">
                <!--- Username Field --->
                <div class="Entry-Field">
                    <!--<label class="label" for="Username">Username:</label>-->
                    <input class="input" id='username-field' label="Username" type="text" name="username" placeholder="Enter Username">
                </div>
                <br>
                <br>
                <!--Password Field-->
                <div class="Entry-Field">
                    <!--<label class="label" for="Password">Password:</label>-->
                    <input class="input" id='password-field' label="Password" type="password" name="password" placeholder="Enter Password">
                </div>

                <div class="Button-Row">
                    <button class="submit-button" type="submit">Login</button>
                    <button class="reset-button" type="reset"><!--unimplemented-->Reset Password</button>
                </div>
            </form>

        </div>

        <p class="register-link">Unregistered? Create a profile <a href="@Url.Action("RegisterView", "General")">here</a></p>

    </main>

    <script>
        history.pushState(null, "", location.href);
        window.onpopstate = () => {
            history.pushState(null, "", location.href);
        };
    </script>
</body>

</html>
