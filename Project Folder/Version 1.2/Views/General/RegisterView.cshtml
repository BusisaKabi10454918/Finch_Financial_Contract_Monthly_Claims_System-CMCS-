@{
    ViewData["Title"] = "Register | Welcome To The Finch CMCS";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Register_Style.css">
    <link rel="icon" href="~/Images/Light/Icons/favicon.ico" type="image/x-icon">
</head>
<body>
    <main>

        <h1 class="Page-Head">Welcome To The System</h1>

        <form method="post" asp-controller="General" asp-action="Register">
        <div class="container">
            

            <div class="details">
                <!--- Firstname Field --->
                <div class="Entry-Field">
                    <label class="label" for="firstName">First Name:</label>
                    <input class="input" id="firstName" type="text" name="firstName" placeholder="Enter your First Name">
                </div>

                <!--- Surname Field --->
                <div class="Entry-Field">
                    <label class="label" for="lastName">Last Name:</label>
                    <input class="input" id="lastName" type="text" name="lastName" placeholder="Enter your Last Name">
                </div>

                <!--- Username Field --->
                <div class="Entry-Field">
                    <label class="label" for="username">Username:</label>
                    <input class="input" id="username" type="text" name="username" placeholder="Enter your Username">
                </div>

                <!--- Password Field --->
                <div class="Entry-Field">
                    <label class="label" for="password">Password:</label>
                    <input class="input" id="password" type="password" name="password" placeholder="Enter your Password">
                </div>
            </div>

            <div class="roles">
                <!--- Role Selection Field --->
                <div class="roles-header">
                    <p>Please Indicate Your Position<br>Before Submitting:</p>
                </div>

                <div class="option">
                    <input type="radio" name="role" value="lecturer" checked>
                    <label>Independent Lecturer</label>
                </div>

                <div class="option">
                    <input type="radio" name="role" value="coordinator">
                    <label>Programme Coordinator</label>
                </div>

                <div class="option">
                    <input type="radio" name="role" value="manager">
                    <label>Academic Manager</label>
                </div>
            </div>
        </div>

        
            <div class="Button-Row">
                <button class="submit-button" type="submit">Submit</button>
                <button class="cancel-button" type="button" onclick="window.location='@Url.Action("LoginView", "General")'">Cancel</button>
            </div>

        </form>

    </main>
</body>

</html>
