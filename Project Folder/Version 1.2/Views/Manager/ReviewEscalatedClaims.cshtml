@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Claims</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Claim_View_General_Style.css">
    <link rel="icon" href="~/Images/Light/Icons/favicon.ico" type="image/x-icon">
</head>
<body>
    <div class="container">
        <h2 class="header">Escalated Claims</h2>
        <!-- Scrollable Claims List -->
        <div class="claims-list">
            <div class="claim">
                <div class="claim-header">DATA 6212 | 12 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 3</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">PROG 6112 | 5 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 1</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">WEDE 5020 | 4 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 2</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">PRLD 5121 | 6 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 1</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">DATA 6212 | 12 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 3</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">PROG 6112 | 5 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 1</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">WEDE 5020 | 4 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 2</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">PRLD 5121 | 6 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 1</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>

            <div class="claim">
                <div class="claim-header">DATA 6212 | 12 Hrs</div>
                <div class="claim-details">Claimant: Independent Contractor 3</div>
                <div class="claim-details">Claim Period: 1/1/1999 – 3/1/1999</div>
            </div>
            <!-- More claims will stack here and remain scrollable -->
        </div>
        <!-- Action Buttons -->
    </div>

    <div class="Button-Row">
        <button class="return-button" onclick="window.history.back()">⬅ Return</button>
        <button class="reject-button" onclick="rejectClaim()">✖ Reject Claim</button>
        <button class="approve-button" onclick="approveClaim()">✔ Approve Claim</button>
    </div>

    <script>
        function rejectClaim() {
            const reason = prompt("Enter reason for rejection:");
            if (reason) {
                alert("Claim rejected:\n" + reason);
                // later: send to backend via fetch/POST
            }
        }

        function approveClaim() {
            alert("Claim approved!");
            // later: send to backend via fetch/POST
        }
    </script>
</body>
</html>
